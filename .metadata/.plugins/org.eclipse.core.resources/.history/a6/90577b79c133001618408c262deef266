import javax.swing.JOptionPane;

public class ClassOrganizer {
	public static void main(String[] args) {
		String[] names = new String[6];
		for (int i =  0; i < names.length; i++) {
			names[i] = JOptionPane.showInputDialog("What is your name?");
		}
		double[] gpas = new double[6];
		for (int i = 0; i < gpas.length; i++) {
			gpas[i] = Double.parseDouble(JOptionPane.showInputDialog("What is " + names[i] + "'s GPA?"));
		}
		for (int i = gpas.length; i > 0; i--) {
			// The highest number in the starting is always the first.
			double highest = gpas[0];
			int spot = 0;
			// Cycle through all the unsorted numbers, to find the highest 
			for (int j = 1; j < i; j++) {
				// Is this number higher than the largest number so far?
				if (gpas[j] > highest) {
					// Then replace the current record with this number.
					highest = gpas[j];
					// ...and store which spot it's in for later.
					spot = j;
				}
			}
			// After the highest unsorted number has been found, switch the highest number with the last unsorted number.
			double temp = gpas[i - 1];
			gpas[i - 1] = highest;
			gpas[spot] = temp;
			String tempName = names[i - 1];
			names[i - 1] = names[spot];
			names[spot] = tempName;
		}
		for (int i = 0; i < names.length; i++) {
			System.out.println(names[i] + "'s GPA is " + gpas[i]);
		}
	}
}
