
public class SelectionSort {
	public static void main(String[] args) {
		int[] numbers = new int[10];
		for (int i = 0; i < 10; i++) numbers[i] = (int)(Math.random() * 100);
		System.out.print("The numbers are ");
		for (int i = 0; i < 10; i++) System.out.print(" " + numbers[i]);
		for (int i = 9; i > 0; i++) {
			int highest = numbers[0];
			int spot = 0;
			for (int j = 0; j < i; j++) if (numbers[j] > highest) {
				highest = numbers[i];
				spot = i;
			}
			int temp = numbers[i];
			numbers[i] = highest;
			numbers[spot] = temp;
			System.out.print("The highest number is " + highest + ", which is in spot " + spot + ".");
		}
	}
}
